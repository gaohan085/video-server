{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "next lint",
    "deploy": "git pull && next build && next start"
  },
  "dependencies": {
    "@next/font": "^13.1.6",
    "@reduxjs/toolkit": "^1.9.2",
    "axios": "^1.2.6",
    "next": "^13.1.6",
    "plyr-react": "^5.1.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "styled-components": "^5.3.6",
    "swr": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "eslint": "^8.33.0",
    "eslint-config-next": "^13.1.6",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "next",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      }
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "quotes": [
        "warn",
        "double"
      ],
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "single",
            "multiple"
          ],
          "allowSeparatedGroups": false
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".dist",
    ".next",
    "**/__test__/**",
    "**/test/**"
  ],
  "lint-staged": {
    "*.{json,css,md,cjs}": [
      "prettier --write"
    ],
    "*.{ts,js,tsx,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.spec.ts": "prettier --write"
  },
  "prettier": {
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "useTabs": false
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
